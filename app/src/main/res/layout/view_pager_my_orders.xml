<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.gigamole.navigationtabstrip.NavigationTabStrip
        android:id="@+id/nav_my_orders"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        app:nts_active_color="@color/white"
        app:nts_animation_duration="300"
        app:nts_color="@color/white"
        app:nts_corners_radius="1.5dp"
        app:nts_factor="2.5"
        app:nts_gravity="bottom"
        app:nts_inactive_color="@android:color/darker_gray"
        app:nts_size="12sp"
        app:nts_titles="@array/array_my_orders"
        app:nts_type="line"
        app:nts_typeface="fonts/typeface.otf"
        app:nts_weight="3dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_my_orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/nav_my_orders">

    </android.support.v4.view.ViewPager>

</RelativeLayout>