<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="OOGO"
        android:textSize="60dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="130dp"
            android:layout_height="180dp"
            android:layout_marginRight="42dp"
            android:adjustViewBounds="true"
            android:src="@drawable/normal" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="180dp"
            android:adjustViewBounds="true"
            android:src="@drawable/professional" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="16dp"
            android:text="Connect with who you need"
            android:textColor="#9d9ea0" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="to fullfil whatever you need."
            android:textColor="#9d9ea0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="42dp"
            android:gravity="center"
            android:text="What kind of user are you ?"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/button_normal"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:backgroundTint="@color/buttonColor"
            android:text="Normal"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button_professional"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/buttonColor"
            android:text="Professional"
            android:textColor="@android:color/white" />
    </LinearLayout>


</LinearLayout>